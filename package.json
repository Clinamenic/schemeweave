{
  "name": "schemeweave",
  "version": "0.1.0",
  "type": "module",
  "description": "Semantic Document Composer - Web-based tool for creating DOAP and FOAF documents with form-based interface and real-time JSON preview",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "deploy": ".workspace/scripts/deploy-to-arweave.sh --prod",
    "deploy:dev": ".workspace/scripts/deploy-to-arweave.sh --dev",
    "deploy:quick": ".workspace/scripts/quick-deploy.sh",
    "backup": ".workspace/scripts/backup-to-protocol-land.sh",
    "version:bump": ".workspace/scripts/version-bump.sh",
    "doap:sync": ".workspace/scripts/doap-sync.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.6",
    "react-hook-form": "^7.48.2",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "author": "Spencer Saar Cavanaugh",
  "homepage": "https://schemeweave.clinamenic.com",
  "repository": "https://github.com/clinamenic/schemeweave"
}